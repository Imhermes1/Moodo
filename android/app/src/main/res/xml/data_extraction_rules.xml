<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Data extraction rules for Android 12+ backup/restore
    -->
    <data-extraction-rules>
        <cloud-backup>
            <!-- Allow backing up user preferences -->
            <include domain="sharedpref" path="user_preferences.xml"/>
            <!-- Exclude sensitive data -->
            <exclude domain="database" path="moodo_database"/>
            <exclude domain="sharedpref" path="auth_tokens.xml"/>
        </cloud-backup>
        
        <device-transfer>
            <!-- Allow transferring user preferences -->
            <include domain="sharedpref" path="user_preferences.xml"/>
            <!-- Exclude sensitive authentication data -->
            <exclude domain="sharedpref" path="auth_tokens.xml"/>
        </device-transfer>
    </data-extraction-rules>
</resources>